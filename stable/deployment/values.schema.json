{
    "title": "Chart Values",
    "type": "object",
    "properties": {
        "global": {
            "type": "object",
            "properties": {
                "serviceName": {
                    "type": "string",
                    "description": "Name of the service. Affects public DNS.",
                    "default": "example"
                },
                "org": {
                    "type": "string",
                    "description": "Company Organization Unit(product group).",
                    "default": "example"
                },
                "environmentType": {
                    "type": "string",
                    "description": "Type of the environment, one of \"dev\", \"stage\", \"prod\".",
                    "default": "dev"
                },
                "domain": {
                    "type": "string",
                    "description": "Company Root-level domain, expects",
                    "default": ""
                },
                "production": {
                    "type": "boolean",
                    "description": "Will the service run in production environment",
                    "default": false
                },
                "environmentName": {
                    "type": "string",
                    "description": "Name of the environment, user-specified.",
                    "default": "dev"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Name of the image,",
                            "default": ""
