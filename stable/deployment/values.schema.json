            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "If service should be created to expose Pod.",
                    "default": true
                },
                "name": {
                    "type": "string",
                    "description": "If you need to specify a service's full name override.",
